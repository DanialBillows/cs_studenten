<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PeopleManager.App.Views.PeopleView" 
             xmlns:vm="clr-namespace:PeopleManager.App.ViewModels" 
             xmlns:m="clr-namespace:PeopleManager.Core.Models;assembly=PeopleManager.Core"
             Title="People Overview"
             x:DataType="vm:PeopleViewModel">


    <CollectionView ItemsSource="{Binding PeopleCollection}" >

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:Person">
                    
                <HorizontalStackLayout>
                        <Label TextColor="White" Grid.Column="0" Text="{Binding FirstName}"  />
                        <Label TextColor="White" Grid.Column="1" Text="{Binding LastName}"  />
                        <Label TextColor="White" Grid.Column="2" Text="{Binding DateOfBirth}" />
                </HorizontalStackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>   

</ContentPage>